<div class="wrapper">
		<!-- LEFT MAIN SIDEBAR -->
		{{>admin-side-nav}}
		<!--  PAGE WRAPPER -->
		<div class="ec-page-wrapper">
			<!-- Header -->
			{{>admin-top-nav}}
<!-- CONTENT WRAPPER -->
			<div class="ec-content-wrapper">
				<div class="content" id="content">
					<div class="breadcrumb-wrapper d-flex align-items-center justify-content-between">
						<div>
							<h1>Home Page Slider</h1>
							<p class="breadcrumbs"><span><a href="/admin/">Home</a></span>
								<span><i class="mdi mdi-chevron-right"></i></span>Slider Images</p>
						</div>
					</div>
                    <hr class="product-hr">
					<u><h3 class="text-center m-3 text-muted">First Slider</h3></u>
					<div class="row">
						<div class="col-xl-12 col-lg-12">
							<div class="ec-cat-list card card-default mb-24px">
								<div class="card-body">
									<div class="ec-cat-form">
										<h4>Add First Slider</h4>

										<form action="/admin/First_Slider" method="post" enctype="multipart/form-data">
											<div class="row ec-vendor-uploads">
										<div class="col-lg-12 col-md-12">
											<div class="ec-vendor-img-upload">
												<div class="ec-vendor-main-img">
													<div class="avatar-upload">
														<div class="avatar-edit">
															<input type='file' id="imageUpload" class="ec-image-upload" name="First_Slider"
																accept=".png, .jpg, .jpeg"  required/>
															<label for="imageUpload"><img
																	src="/assets/img/icons/edit.svg"
																	class="svg_img header_svg" alt="edit"/></label>
														    </div>
														<div class="avatar-preview ec-preview">
															<div class="imagePreview ec-div-preview">
																<img class="ec-image-preview" 
																	src="/user/assets/images/covers/First_Slider.jpg"
																	alt="edit" />
															</div>
														</div>
													</div>
												</div>
											</div>
										</div>
									</div>
											<div class="row mt-4">
												<div class="col-12">
													<button  type="submit" class="btn btn-primary">Submit</button>
												</div>
											</div>
										</form>
									</div>
								</div>
							</div>
						</div>
					</div>
					<u><h3 class="text-center m-3 text-muted">Second Slider</h3></u>
					<div class="row">
						<div class="col-xl-12 col-lg-12">
							<div class="ec-cat-list card card-default mb-24px">
								<div class="card-body">
									<div class="ec-cat-form">
										<h4>Add Second Slider</h4>

										<form action="/admin/Second_Slider" method="post" enctype="multipart/form-data">
											<div class="row ec-vendor-uploads">
										<div class="col-lg-12 col-md-12">
											<div class="ec-vendor-img-upload">
												<div class="ec-vendor-main-img">
													<div class="avatar-upload">
														<div class="avatar-edit">
															<input type='file' id="imageUpload" class="ec-image-upload" name="Second_Slider"
																accept=".png, .jpg, .jpeg"  required/>
															<label for="imageUpload"><img
																	src="/assets/img/icons/edit.svg"
																	class="svg_img header_svg" alt="edit"/></label>
														    </div>
														<div class="avatar-preview ec-preview">
															<div class="imagePreview ec-div-preview">
																<img class="ec-image-preview" 
																	src="/user/assets/images/covers/Second_Slider.jpg"
																	alt="edit" />
															</div>
														</div>
													</div>
												</div>
											</div>
										</div>
									</div>
											<div class="row mt-4">
												<div class="col-12">
													<button  type="submit" class="btn btn-primary">Submit</button>
												</div>
											</div>
										</form>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div> <!-- End Content -->
			</div> <!-- End Content Wrapper -->
        </div>
        