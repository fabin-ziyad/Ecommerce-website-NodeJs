										<h4>Add First Banner Image</h4>

										<form action="/admin/banner1" method="post" enctype="multipart/form-data">
											<div class="row ec-vendor-uploads">
										<div class="col-lg-12 col-md-12">
											<div class="ec-vendor-img-upload">
												<div class="ec-vendor-main-img">
													<div class="avatar-upload">
														<div class="avatar-edit">
															<input type='file' id="imageUpload" class="ec-image-upload" name="Banner1"
																accept=".png, .jpg, .jpeg"  required/>
															<label for="imageUpload"><img
																	src="/assets/img/icons/edit.svg"
																	class="svg_img header_svg" alt="edit"/></label>
														    </div>
														<div class="avatar-preview ec-preview">
															<div class="imagePreview ec-div-preview">
																<img class="ec-image-preview" 
																	src="/user/assets/images/covers/Banner_One.jpg"
																	alt="edit" />
															</div>
														</div>
													</div>
												</div>
											</div>
										</div>
									</div>
											<div class="row mt-4">
												<div class="col-12">
