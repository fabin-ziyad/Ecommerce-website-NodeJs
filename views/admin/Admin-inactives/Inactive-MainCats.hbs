	<!-- WRAPPER -->
	<div class="wrapper">
		<!-- LEFT MAIN SIDEBAR -->
		{{>admin-side-nav}}
		<!--  PAGE WRAPPER -->
		<div class="ec-page-wrapper">
			<!-- Header -->
			{{>admin-top-nav}}
    <!-- CONTENT WRAPPER -->
			<div class="ec-content-wrapper">
				<div class="content">
					<div class="breadcrumb-wrapper breadcrumb-wrapper-2">
						<h1>Disabled Main Categories</h1>
						<p class="breadcrumbs"><span><a href="/admin/home">Home</a></span>
							<span><i class="mdi mdi-chevron-right"></i></span>Disabled Main Categories
						</p>
					</div>
					<div class="row">
						<div class="col-12">
							<div class="card card-default" id="InactiveMainCats">
								<div class="card-body">
									<div class="table-responsive">
										<table id="responsive-data-table" class="table" style="width:100%">
											<thead>
												<tr>
													
													<th>Category Name</th>
													<th>Products</th>
													<th>Sub Counts</th>
													<th>Status</th>
													<th>Action</th>
													<th>Enable</th>

												</tr>
											</thead>

											<tbody>
												{{#each AllMainCat}}
												{{#unless this.Status}}
												<tr>
													<td>{{this.Category_Name}}</td>
													{{#if this.MainproductsCount}}
													<td><span class="ec-In-maincat-count" title="Total Sub Categories">{{this.MainproductsCount}}</span></td>
													{{else}}
													<td><span class="ec-In-maincat-count" title="Total Sub Categories">0</span></td>
													{{/if}}
													{{#if this.SubCategoryLength}}
													<td><span class="ec-In-subcat-count" title="Total Sub Categories">{{this.SubCategoryLength}}</span></td>
													{{else}}
													<td><span class="ec-In-subcat-count" title="Total Sub Categories">0</span></td>
													{{/if}}
													<td ><span class="ec-In-status">Inactive</span></td>
													<td>
														<div class="btn-group">
															<a href="javascript:0" type="button"
															class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#delete{{this._id}}">Delete</a>
														</div>
													</td>
													<td>
												        <label class="switch mt-2">
															<input type="checkbox" name="" id="OnOff{{this._id}}" onchange="onoffMainCat('{{this._id}}')" >
															<span class="slider round"></span>
														</label>
													</td>
													
												</tr>
																								<!-- Modal -->
<div class="modal fade" id="delete{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Delete Category</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
 
        </button>
      </div>
      <div class="modal-body">
		<form action="/admin/DeleteMainCat" method="post">
		<div class="row ">
			<div class="col-md-6">
				<div class="form-group">
					<label for="MainCategory">Category Name</label>
					<input type="text" class="form-control" id="lastName" value="{{this.Category_Name}}"  readonly>
				</div>
			</div>
			<div class="col-md-6">
				<div class="form-group">
					<img src="/assets/category-thumb/{{this._id}}.jpg" style="width: 93px;height:90px" alt="" srcset="">
				</div>
			</div>
		</div>
       <div class="row mb-2 mt-2">
										<div class="col-lg-6">
											<div class="form-group mb-3">
												<label for="MainCategory">Category ID</label>
												<input type="text" class="form-control" name="MainCatId" value="{{this._id}}"  readonly>
											</div>
										</div>
										<div class="col-lg-6">
											<div class="form-group">
												<label for="firstName">Sub Categories</label>
												<input type="text" class="form-control" id="firstName" value="{{this.SubCategoryLength}}" readonly>
											</div>
										</div>
									</div>
									<div class="row">
										<div class="col-md-12">
											<small>All the sub categories and products related to this id will be deleted</small>
										</div>
									</div>
									<div class="row mb-2 mt-4">
										<div class="col-lg-6">
											<div class="form-group">
												<label for="MainCategory">Products</label>
												{{#if this.MainproductsCount}}
												<input type="text" class="form-control" id="lastName" value="{{this.MainproductsCount}}"  readonly>
												{{else}}
												<input type="text" class="form-control" id="lastName" value="0"  readonly>
												{{/if}}
											</div>
										</div>
										 <div class="modal-footer col-lg-6">
                    <button type="button" class="btn btn-secondary btn-pill" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-danger">Delete</button>
      </div>
									</div>
      </div>
     </form>
    </div>
  </div>
</div>			

												 <!--Edit Product Modal!-->
                            <div class="modal fade modal-add-contact" id="update{{this._id}}" tabindex="-1" role="dialog" aria-hidden="true">
						<div class="modal-dialog modal-dialog-centered modal-lg" role="document">
							<div class="modal-content">
								<form  id="MainCatStatus">
									<div class="modal-header px-4">
										<h5 class="modal-title text-center" id="exampleModalCenterTitle">Activate Category</h5>
									</div>
									<div class="modal-body px-4">
										<div class="mb-3">
										<label for="firstName">Product ID</label>
								          <input type="text" class="form-control  mt-2" name="UpdateMainStatusId" value="{{this._id}}" readonly >
		                                <small>Product Id can be used for filtering products</small>
										</div>
										<div class="row mb-2">
											<div class="col-lg-6">
												<div class="form-group">
													<label for="firstName">Category Name</label>
													<input type="text" class="form-control" id="firstName" value="{{this.Category_Name}}" readonly>
												</div>
											</div>

											<div class="col-lg-6">
												<div class="form-group">
													<label for="MainCategory">Products</label>
													{{#if this.MainproductsCount}}
													<input type="text" class="form-control" id="lastName" value="{{this.MainproductsCount}}" readonly>
													{{else}}
													<input type="text" class="form-control" id="lastName" value="0" readonly>
													{{/if}}
												</div>
											</div>
											<div class="row">
											<div class="col-lg-6">
												<div class="form-group mb-4">
													<label for="SubCategory">Sub Categories</label>
													{{#if this.SubCategoryLength}}
													<input type="text" class="form-control" id="SubCategory"
														value="{{this.SubCategoryLength}}" readonly>
													{{else}}
                               					    <input type="text" class="form-control" id="SubCategory" value="0" readonly>
													{{/if}}
												</div>
											</div>
										
								</div>
								<div class="modal-footer px-4 col-lg-12">
										<button type="button" class="btn btn-secondary btn-pill"
											data-bs-dismiss="modal">Cancel</button>
										<button type="submit" class="btn btn-primary btn-pill">Submit</button>
									</div>
								</div>	
								</form>
							</div>
						</div>
					</div>                           

												{{/unless}}
												{{/each}}
												

											</tbody>
										</table>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div> <!-- End Content -->
			</div> <!-- End Content Wrapper -->


			<!-- Footer -->
			<footer class="footer mt-auto">
				<div class="copyright bg-white">
					<p>
