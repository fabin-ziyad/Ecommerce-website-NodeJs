<!-- WRAPPER -->
<div class="wrapper">
    <!-- LEFT MAIN SIDEBAR -->
    {{>admin-side-nav}}
    <!--  PAGE WRAPPER -->
    <div class="ec-page-wrapper">
        <!-- Header -->
        {{>admin-top-nav}}
        <!-- CONTENT WRAPPER -->
        <div class="ec-content-wrapper">
            <div class="content">
                <div class="breadcrumb-wrapper breadcrumb-wrapper-2">
                    <h1>Stock Out Products</h1>
                    <p class="breadcrumbs">
                        <span>
                            <a href="/admin/home">Home</a>
                        </span>
                        <span>
                            <i class="mdi mdi-chevron-right"></i>
                        </span>
                        Stock Out Products
                    </p>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="card card-default">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="responsive-data-table" class="table" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>Product</th>
                                                <th>Name</th>
                                                <th>Main Category</th>
                                                <th>Sub Category</th>
                                                <th>Price</th>
                                                <th>Info</th>
                                                <th>Delete</th>
                                                <th>In Stock</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                {{#each Products}}
                                                    
                                                <td>
                                                    <img src="/assets/img/products/{{this._id}}/{{this._id}}1.jpg" class="InactiveImg">
                                                </td>
                                                <td>{{this.ProductName}}</td>
                                                <td>{{this.MainCategory}}</td>
                                                <td>{{this.SubCategory}}</td>
                                                <td>{{this.ProductPrice}}</td>
                                                <td>
                                                    <div class="btn-group">
                                                        <a
                                                            href="javascript:0"
                                                            type="button"
                                                            class="btn btn-outline-danger"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#info{{this._id}}"
                                                        >Info</a>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="btn-group">
                                                        <a
                                                            href="javascript:0"
                                                            type="button"
                                                            class="btn btn-outline-danger"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#delete{{this._id}}"
                                                        >Delete</a>
                                                    </div>
                                                </td>
                                                <td>
                                                    <label class="switch mt-2">
                                                        <input type="checkbox" id="Productid{{this._id}}" onchange="Stock('{{this._id}}')">
                                                        <span class="slider round"></span>
                                                    </label>
                                                </td>
                                            </tr>
                                            <div
                                                class="modal fade"
                                                id="delete{{this._id}}"
                                                tabindex="-1"
                                                role="dialog"
                                                aria-labelledby="exampleModalCenterTitle"
                                                aria-hidden="true"
                                            >
                                                <div class="modal-dialog modal-dialog-centered" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="exampleModalLongTitle">Delete Product</h5>
                                                            <button
                                                                type="button"
                                                                class="close"
                                                                data-dismiss="modal"
                                                                aria-label="Close"
                                                            ></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <form action="/admin/DeleteProduct" method="post">
                                                                <input
                                                                    type="text"
                                                                    name="ProductId"
                                                                    value="{{this._id}}"
                                                                    readonly
                                                                    hidden
                                                                >
                                                                <div class="row ">
                                                                    <div class="col-md-6">
                                                                        <div class="form-group">
                                                                            <label for="MainCategory">Category Name</label>
                                                                            <input
                                                                                type="text"
                                                                                class="form-control"
                                                                                id="lastName"
                                                                                value="{{this.MainCategory}}"
                                                                                readonly
                                                                            >
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-md-6">
                                                                        <div class="form-group">
                                                                            <img
                                                                                src="/assets/img/products/{{this._id}}/{{this._id}}1.jpg"
                                                                                style="width: 93px;height:90px"
                                                                                alt=""
                                                                                srcset=""
                                                                            >
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="row mb-2 mt-2">
                                                                    <div class="col-lg-6">
                                                                        <div class="form-group mb-3">
                                                                            <label for="MainCategory">Product Name</label>
                                                                            <input
                                                                                type="text"
                                                                                class="form-control"
                                                                                name="MainCatId"
                                                                                value="{{this.ProductName}}"
                                                                                readonly
                                                                            >
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-lg-6">
                                                                        <div class="form-group">
                                                                            <label for="firstName">Sub Category</label>
                                                                            <input
                                                                                type="text"
                                                                                class="form-control"
                                                                                id="firstName"
                                                                                value="{{this.SubCategory}}"
                                                                                readonly
                                                                            >
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="row mb-2 mt-4">
                                                                    <div class="col-lg-6">
                                                                        <div class="form-group">
                                                                            <label for="MainCategory">Products</label>
                                                                            <input
                                                                                type="text"
                                                                                class="form-control"
                                                                                value="{{this.ProductPrice}}"
                                                                                readonly
                                                                            >
                                                                        </div>
                                                                    </div>
                                                                    <div class="modal-footer col-lg-6">
                                                                        <button type="button" class="btn btn-secondary btn-pill" data-bs-dismiss="modal">Cancel</button>
                                                                        <button type="submit" class="btn btn-danger">Delete</button>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- Modal -->
                                            <div
                                                class="modal fade modal-contact-detail"
                                                id="info{{this._id}}"
                                                tabindex="-1"
                                                aria-hidden="true"
                                            >
                                                <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header justify-content-end border-bottom-0">
                                                            <div class="dropdown">
                                                                <button
                                                                    class="btn-dots-icon"
                                                                    type="button"
                                                                    id="dropdownMenuButton"
                                                                    data-bs-toggle="dropdown"
                                                                    aria-haspopup="true"
                                                                    aria-expanded="false"
                                                                ></button>
                                                            </div>
                                                            <button
                                                                type="button"
                                                                class="btn-close-icon"
                                                                data-bs-dismiss="modal"
                                                                aria-label="Close"
                                                            >
                                                                <i class="mdi mdi-close"></i>
                                                            </button>
                                                        </div>
                                                        <div class="modal-body pt-0">
                                                            <div class="row no-gutters">
                                                                <div class="col-md-6">
                                                                    <div class="profile-content-left px-4">
                                                                        <div class="text-center widget-profile px-0 border-0">
                                                                            <div class="card-img mx-auto rounded-circle">
                                                                                <img src="/assets/img/products/{{this._id}}/{{this._id}}1.jpg" alt="user image">
                                                                            </div>
                                                                            <div class="card-body">
                                                                                <h4 class="py-2 text-dark">{{this.ProductName}}</h4>
                                                                            </div>
                                                                        </div>
                                                                        <div class="d-flex justify-content-between ">
                                                                            <div class="text-center pb-4">
                                                                                <p class="text-dark pb-2">Main Category</p>
                                                                                <h6 class="badge badge-dark pb-2">{{this.MainCategory}}</h6>
                                                                            </div>
                                                                            <div class="text-center pb-4">
                                                                                <p>Sub Category</p>
                                                                                <h6 class="badge badge-success pb-2">{{this.SubCategory}}</h6>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <div class="profile-content-left px-4">
                                                                        <div class="d-flex justify-content-between ">
                                                                            <div class="text-center pb-4">
                                                                                <p class="text-dark pb-2">Total Sell</p>
                                                                                <h6 class="text-dark pb-2">567</h6>
                                                                            </div>
                                                                            <div class="text-center pb-4">
                                                                                <p>Wishlists</p>
                                                                                <h6 class="text-dark pb-2">464</h6>
                                                                            </div>
                                                                            <div class="text-center pb-4">
                                                                                <p>In Cart</p>
                                                                                <h6 class="text-dark pb-2">464</h6>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <div class="profile-content-left px-4">
                                                                        <div class="d-flex justify-content-between ">
                                                                            <div class="text-center pb-4">
                                                                                <p class="text-dark pb-2">Quantity</p>
                                                                                <h6 class="text-dark pb-2">{{this.ProductQuantity}}</h6>
                                                                            </div>
                                                                            <div class="text-center pb-4">
                                                                                <p>Status</p>
                                                                                {{#if this.Status}}
                                                                                <span class="badge badge-success">Active</span>
                                                                                {{else}}
                                                                                <span class="badge badge-danger">Inactive</span>
                                                                                {{/if}}
                                                                            </div>
                                                                            <div class="text-center pb-4">
                                                                                <p>Price</p>
                                                                                <h6 class="text-dark pb-2">{{this.ProductPrice}}</h6>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <div class="contact-info px-4">
                                                                        <h4 class="text-dark mb-1">Detailed Informations</h4>
                                                                        <p class="text-dark font-weight-medium mt-3 mb-2">Size:
                                                                            <span class="ec-subcat-popup">{{this.ProductSize}}</span>
                                                                        </p>
                                                                        <h6 class="text-dark mt-3">Colors</h6>
                                                                        {{#each this.ProductColor}}
                                                                        <span class="ec-subcat-popup">{{this}}</span>
                                                                        {{/each}}
                                                                        <h6 class="text-dark mt-3">Short Description</h6>
                                                                        <p class="text-muted">{{this.ShortDescription}}</p>
                                                                        <h6 class="text-dark mt-3">Full Description</h6>
                                                                        <p class="text-muted">{{this.FullDescription}}</p>
                                                                        <h6>Trending:
                                                                            <span class="badge badge-success mt-5">Top</span>
                                                                        </h6>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
										{{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Content -->
    </div>
    <!-- End Content Wrapper -->
    <!-- Footer -->
    <footer class="footer mt-auto">
        <div class="copyright bg-white">
            <p>
                Copyright &copy;
                <span id="ec-year"></span>
                <a class="text-primary" href="https://themeforest.net/user/ashishmaraviya" target="_blank">
                    Admin
							Dashboard
                </a>
                . All Rights Reserved.
            </p>
        </div>
    </footer>
</div>
<!-- End Page Wrapper -->
</div>
<!-- End Wrapper -->
</div>
