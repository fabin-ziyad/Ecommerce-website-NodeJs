<!-- WRAPPER -->
<div class="wrapper">
    <!-- LEFT MAIN SIDEBAR -->
    {{>admin-side-nav}}
    <!--  PAGE WRAPPER -->
    <div class="ec-page-wrapper">
        <!-- Header -->
        {{>admin-top-nav}}
        <!-- CONTENT WRAPPER -->
        <div class="ec-content-wrapper">
            <div class="content">
                <div class="breadcrumb-wrapper breadcrumb-wrapper-2">
                    <h1>Disabled Sub Categories</h1>
                    <p class="breadcrumbs">
                        <span>
                            <a href="/admin/home">Home</a>
                        </span>
                        <span>
                            <i class="mdi mdi-chevron-right"></i>
                        </span>
                        Disabled Sub Categories
                    </p>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="card card-default">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="responsive-data-table" class="table" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>Category Name</th>
                                                <th>Main Category</th>
                                                <th>Products</th>
                                                <th>Status</th>
                                                <th>Action</th>
                                                <th>Enable</th>
                                            </tr>
                                        </thead>
                                        <tbody id="test">
                                            {{#each AllSubCat}}
												{{#unless this.Status}}
                                            <tr>
                                                <td>{{this.SubCategory}}</td>
                                                <td>{{this.MainCategoryName}}</td>
                                                {{#if this.subCatProductCount}}
                                                <td>
                                                    <span class="ec-In-maincat-count" title="Total Sub Categories">{{this.subCatProductCount}}</span>
                                                </td>
                                                {{else}}
                                                <td>
                                                    <span class="ec-In-maincat-count" title="Total Sub Categories">0</span>
                                                </td>
                                                {{/if}}
                                                <td>
                                                    <span class="ec-In-status">Inactive</span>
                                                </td>
                                                <td>
                                                    <div class="btn-group">
                                                        <a
                                                            href="javascript:0"
                                                            type="button"
                                                            class="btn btn-outline-danger"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#delete{{this._id}}"
                                                        >Delete</a>
                                                    </div>
                                                </td>
                                                <td>
                                                    <label class="switch mt-2">
                                                        <input type="checkbox" id="OnOffSub{{this._id}}" onchange="onoffSubCat('{{this._id}}')">
                                                        <span class="slider round"></span>
                                                    </label>
                                                </td>
                                            </tr>
                                            <!-- Modal -->
                                            <div
                                                class="modal fade"
                                                id="delete{{this._id}}"
                                                tabindex="-1"
                                                role="dialog"
                                                aria-labelledby="exampleModalCenterTitle"
                                                aria-hidden="true"
                                            >
                                                <div class="modal-dialog modal-dialog-centered" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                                                            <button
                                                                type="button"
                                                                class="close"
                                                                data-dismiss="modal"
                                                                aria-label="Close"
                                                            ></button>
                                                        </div>
                                                        <form action="/admin/DeleteSubCat" method="post">
                                                            <div class="modal-body">
                                                                <div class="row mb-2 mt-4">
                                                                    <div class="col-lg-6">
                                                                        <div class="form-group mb-3">
                                                                            <label for="MainCategory">Category ID</label>
                                                                            <input
                                                                                type="text"
                                                                                class="form-control"
                                                                                name="SubCatId"
                                                                                value="{{this._id}}"
                                                                                readonly
                                                                            >
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-lg-6">
                                                                        <div class="form-group">
                                                                            <label for="firstName">Main Category</label>
                                                                            <input
                                                                                type="text"
                                                                                class="form-control"
                                                                                id="firstName"
                                                                                value="{{this.MainCategoryName}}"
                                                                                readonly
                                                                            >
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="row">
                                                                    <div class="col-md-12">
                                                                        <small>All the sub categories and products related to this id will be deleted</small>
                                                                    </div>
                                                                </div>
                                                                <div class="row mb-2 mt-4">
                                                                    <div class="col-lg-6">
                                                                        <div class="form-group">
                                                                            <label for="MainCategory">Products</label>
                                                                            {{#if this.subCatProductCount}}
                                                                            <input
                                                                                type="text"
                                                                                class="form-control"
                                                                                id="lastName"
                                                                                value="{{this.subCatProductCount}}"
                                                                                readonly
                                                                            >
                                                                            {{else}}
                                                                            <input
                                                                                type="text"
                                                                                class="form-control"
                                                                                id="lastName"
                                                                                value="0"
                                                                                readonly
                                                                            >
                                                                            {{/if}}
                                                                        </div>
                                                                    </div>
                                                                    <div class="modal-footer col-lg-6">
                                                                        <button type="button" class="btn btn-secondary btn-pill" data-bs-dismiss="modal">Cancel</button>
                                                                        <button type="submit" class="btn btn-danger">Delete</button>
                                                                    </div>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    {{/unless}}
												{{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Content -->
</div>
<!-- End Content Wrapper -->
<!-- Footer -->
<footer class="footer mt-auto">
    <div class="copyright bg-white">
        <p>
            Copyright &copy;
            <span id="ec-year"></span>
            <a class="text-primary" href="https://themeforest.net/user/ashishmaraviya" target="_blank">
                Admin
							Dashboard
            </a>
            . All Rights Reserved.
        </p>
    </div>
</footer>
</div>
<!-- End Page Wrapper -->
</div>
<!-- End Wrapper -->
</div>
