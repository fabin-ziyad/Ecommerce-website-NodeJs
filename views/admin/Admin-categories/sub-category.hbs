<div class="wrapper">
		<!-- LEFT MAIN SIDEBAR -->
		{{>admin-side-nav}}
		<!--  PAGE WRAPPER -->
		<div class="ec-page-wrapper">
			<!-- Header -->
			{{>admin-top-nav}}
<!-- CONTENT WRAPPER -->
			<div class="ec-content-wrapper">
				<div class="content">
					<div class="breadcrumb-wrapper d-flex align-items-center justify-content-between">
						<div>
							<h1>Sub Category</h1>
							<p class="breadcrumbs"><span><a href="/admin/home">Home</a></span>
								<span><i class="mdi mdi-chevron-right"></i></span>Sub Category</p>
						</div>
						<div>
							<a href="/admin/main-category" class="btn btn-primary"> Main Category
							</a>
						</div>
					</div>
					<div class="row" id="maincats">
						<div class="col-xl-4 col-lg-12">
							<div class="ec-cat-list card card-default mb-24px">
								<div class="card-body" >
									<div class="ec-cat-form">
										<h4>Add Sub Category</h4>
										<form action="" id="SubCatForm">
											<div class="form-group row">
												<label for="text" class="col-12 col-form-label">Name</label> 
												<div class="col-12">
													<input id="text" name="SubCategory" class="form-control here slug-title" type="text" required>
												</div>
											</div>

											<div class="form-group row">
												<label for="parent-category" class="col-12 col-form-label">Parent Category</label> 
												<div class="col-12">
													<select id="parent-category" name="parentCategory" class="custom-select" >
											{{#each AllMainCat}}
												<option value="{{this._id}}">{{this.Category_Name}}</option>
											{{/each}}
													</select>
												</div>
											</div>
											<div class="row">
												<div class="col-12">
													<button  type="submit" class="btn btn-primary">Submit</button>
												</div>
											</div>
										</form>
									</div>
								</div>
							</div>
						</div>
						<div class="col-xl-8 col-lg-12" >
							<div class="ec-cat-list card card-default" id="subCatDetails">
								<div class="card-body">
									<div class="table-responsive" >
										<table id="responsive-data-table" class="table">
											<thead>
												<tr>
													<th>Name</th>
													<th>Main Category</th>
													<th>Product</th>
													<th>Action</th>
													<th>Disable</th>
												</tr>
											</thead>
											<tbody>
											{{#each AllSubCat}}
											{{#if this.Status}}
												<tr>
													<td>
														<span class="ec-sub-cat-list">
														<span class="ec-sub-cat-tag">{{this.SubCategory}}</span>
													</td id="1">
													<td>{{this.MainCategoryName}}</td>
													{{#if this.subCatProductCount}}
													<td><span class="ec-sub-cat-count" title="Total Sub Categories">{{this.subCatProductCount}}</span></td>
													{{else}}
													<td><span class="ec-sub-cat-count" title="Total Sub Categories">0</span></td>
													{{/if}}
													<td>
														<div class="btn-group">
															<a href="javascript:0" type="button"
															class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#info{{this._id}}">Info</a>
														</div>
														<div class="btn-group">
															<a href="javascript:0" type="button"
															class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#Edit{{this._id}}">Edit</a>
														</div>
													</td>
													<td>
														<label class="switch mt-2">
															<input type="checkbox"  id="OnOffSub{{this._id}}" onchange="onoffSubCat('{{this._id}}')" checked>
															<span class="slider round"></span>
														</label>
													</td>
												</tr>

         						<!-- Category Info Modal -->
					<div class="modal fade modal-contact-detail" id="info{{this._id}}" tabindex="-1" aria-hidden="true">
						<div class="modal-dialog modal-dialog-centered modal-lg" role="document">
							<div class="modal-content">
								<div class="modal-header justify-content-end border-bottom-0">
									<button type="button" class="btn-edit-icon" data-bs-dismiss="modal"
										aria-label="Close">
									</button>
									<div class="dropdown">
										<button class="btn-dots-icon" type="button" id="dropdownMenuButton"
											data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
										</button>
										<div class="dropdown-menu dropdown-menu-right">
											<a class="dropdown-item" href="#">Action</a>
											<a class="dropdown-item" href="#">Another action</a>
											<a class="dropdown-item" href="#">Something else here</a>
										</div>
									</div>
									<button type="button" class="btn-close-icon" data-bs-dismiss="modal" aria-label="Close">
										<i class="mdi mdi-close"></i>
									</button>
								</div>
								<div class="modal-body pt-0">
									<div class="row no-gutters">
										<div class="col-md-6">
											<div class="profile-content-left px-4">
												<div class="text-center widget-profile px-0 border-0">
													<div class="card-img mx-auto rounded-circle">
														<img src="/assets/category-thumb/{{this.parentCategory}}.jpg" alt="user image">
													</div>
													<div class="card-body">
														<h4 class="py-2 text-dark">{{this.SubCategory}}</h4>
													</div>
												</div>
												<div class="d-flex justify-content-between ">
													<div class="text-center pb-4">
														{{#if this.subCatProductCount}}
														<h6 class="text-dark pb-2">{{this.subCatProductCount}}</h6>
														{{else}}
															<h6 class="text-dark pb-2">0</h6>
														{{/if}}
														<p>Products</p>
													</div>
													<div class="text-center pb-4">
														<h6 class="text-dark pb-2">30</h6>
														<p>Wish List</p>
													</div>
													<div class="text-center pb-4">
														<h6 class="text-dark pb-2">464</h6>
														<p>Total Sell</p>
													</div>
												</div>
											</div>
										</div>
										<div class="col-md-6">
											<div class="contact-info px-4">
												<h4 class="text-dark mb-1">More Info</h4>
												<p class="text-dark font-weight-medium pt-4 mb-2">Main Category</p>
												<h6 class="font-weight-bold"> <span class="badge badge-dark">{{this.MainCategoryName}}</span></h6>
												
												<p class="text-dark font-weight-medium pt-4 mb-2">Trending</p>
												<h6><span class="badge badge-warning">Top</span></h6>
												<p class="text-dark font-weight-medium pt-4 mb-2">Satus</p>
												{{#if this.Status}}
												<h6 class="ec-Ac-status">Active</h6>
												{{else}}
												<h6 class="ec-In-status">Inactive</h6>
												{{/if}}
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
              <!-- Category Info Modal End -->



                         <!--EDIT SUB CATEGORY !-->
			<div class="modal fade modal-add-contact" id="Edit{{this._id}}" tabindex="-1" role="dialog" aria-hidden="true">
				<div class="modal-dialog modal-dialog-centered modal-lg" role="document">
					<div class="modal-content">
						<form id="UpdateSubCatData" action="/admin/UpdateSubCat" method="post">
							<input type="text" value="{{this._id}}" name="SUBID" readonly hidden>
								<div class="modal-header px-4">
									<h5 class="modal-title" id="exampleModalCenterTitle">Edit Main Category</h5>
								</div>
								<div class="modal-body px-4">
									<div class="row mb-2 mt-4">
										<div class="col-lg-6">
											<div class="form-group">
												<label for="MainCategory">Category ID</label>
												<input type="text" class="form-control" id="lastName" value="{{this._id}}"  readonly>
											</div>
										</div>
										<div class="col-lg-6">
											<div class="form-group">
												<label for="firstName">Sub Category Name</label>
												<input type="text" class="form-control" id="firstName" value="{{this.SubCategory}}" name="UpdatedSubCat" required>
											</div>
										</div>
									</div>
									<div class="row mb-2 mt-4">
										<div class="col-lg-6">
											<div class="form-group">
												<label for="MainCategory">Recent Main Category</label>
												<input type="text" class="form-control" id="lastName" value="{{this.MainCategoryName}}"  readonly>
											</div>
										</div>
										<div class="form-group col-lg-6">
												<label for="parent-category" class="col-12 col-form-label">Parent Category</label> 
												<div class="col-lg-6">
													<select id="parent-category" name="parentCategory" class="MainCats" >
											{{#each ../AllMainCat}}
												<option value="{{this._id}}">{{this.Category_Name}}</option>
											{{/each}}
													</select>
												</div>
											</div>
									</div>
									
								    <div class="row">
									    <div class="col-md-12">
									<div class="modal-footer px-4">
										<button type="button" class="btn btn-secondary btn-pill"
											data-bs-dismiss="modal">Cancel</button>
										<button type="submit" class="btn btn-primary ">Update Category</button>
									</div>
									</div>
									</div>

								</div>
						</form>
					</div>
				</div>
			</div>
			                {{/if}}
							{{/each}}
							</tbody>
						</table>
				    </div>
				</div>
			</div>
		</div>
		</div>
	</div> <!-- End Content -->
</div> <!-- End Content Wrapper -->

			<!-- Footer -->
			<footer class="footer mt-auto">
				<div class="copyright bg-white">
					<p>
						Copyright &copy; <span id="ec-year"></span><a class="text-primary"
						href="#" target="_blank"> Admin Dashboard</a>. All Rights Reserved.
					  </p>
				</div>
			</footer>

		</div> <!-- End Page Wrapper -->

	</div> <!-- End Wrapper -->
    </div>
