                                                </div>
                                                <!-- End .custom-checkbox -->
                                            </div>
                                            <!-- End .filter-item -->
                                            <div class="filter-item">
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" class="custom-control-input" id="XXL" value="XXL" onchange="filterSize()">
                                                    <label class="custom-control-label" for="XXL">XXL</label>
                                                </div>
                                                <!-- End .custom-checkbox -->
                                            </div>
                                            <!-- End .filter-item -->
                                        </div>
                                        <!-- End .filter-items -->
                                    </div>
                                    <!-- End .widget-body -->
                                </div>
                                <!-- End .collapse -->
                            </div>
                            <!-- End .widget -->
                           
                        
                            <div class="widget widget-collapsible">
                                <h3 class="widget-title">
                                    <a
                                        data-toggle="collapse"
                                        href="#widget-4"
                                        role="button"
                                        aria-expanded="true"
